<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/theme_bg"
	android:padding="20dp"
	tools:context=".Activity_Scanner">

	<ImageView
		android:id="@+id/idIvCaptureImage"
		android:layout_width="300dp"
		android:layout_height="300dp"
		android:layout_marginTop="25dp"
		android:background="@drawable/camera_border"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/idTextDetectedText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="40dp"
		android:drawableLeft="@drawable/ic_baseline_format_align_center_24"
		android:drawablePadding="10dp"
		android:gravity="center_vertical"
		android:padding="10dp"
		android:text="Click on Take a Snap Button"
		android:textSize="20sp"
		android:textStyle="bold"
		android:textColor="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/idIvCaptureImage" />

	<Button
		android:id="@+id/idBtnSanp"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="68dp"
		android:backgroundTint="@color/btn_bg"
		android:text="Take a snap"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/idTextDetectedText" />

	<Button
		android:id="@+id/idBtnDectect"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="28dp"
		android:backgroundTint="@color/btn_bg"
		android:text="Detect Text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/idBtnSanp" />


</androidx.constraintlayout.widget.ConstraintLayout>